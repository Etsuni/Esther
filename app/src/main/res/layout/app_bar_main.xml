<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/barLayout"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"

    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/AppTheme.PopupOverlay">

   <android.support.v7.widget.Toolbar
       android:id="@+id/toolbar"
       android:minHeight="?attr/actionBarSize"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:titleTextColor="@android:color/white"
       android:background="?attr/colorPrimary">
   </android.support.v7.widget.Toolbar>

   <ImageView
       android:id="@+id/iconState"
       android:layout_width="@dimen/connexionIcon"
       android:layout_height="@dimen/connexionIcon"

       android:layout_alignParentRight="true"
       android:layout_marginRight="@dimen/marginIcon"
       android:layout_marginTop="@dimen/marginIcon"

       android:src="@drawable/ic_state_disconnected" />

</RelativeLayout>