<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:layout_marginRight="24dp"
    android:layout_marginLeft="24dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sid_index"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:cropToPadding="true"
                app:srcCompat="@mipmap/ic_sid_index"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-20dp" />

            <TextView
                android:id="@+id/Hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un petit café ?"
                android:layout_marginTop="-20dp"
                android:layout_below="@+id/sid_index"
                android:layout_alignRight="@+id/Hello2"
                android:layout_alignEnd="@+id/Hello2" />

            <Button
                android:id="@+id/btnCoffeeDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_alignBaseline="@+id/btnCoffeeCourt"
                android:layout_alignBottom="@+id/btnCoffeeCourt"
                android:layout_toRightOf="@+id/Hello"
                android:layout_toEndOf="@+id/Hello" />

            <Button
                android:id="@+id/btnCoffeeCourt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Court"
                android:layout_below="@+id/Hello"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btnCoffeeLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:layout_alignBaseline="@+id/btnCoffeeCourt"
                android:layout_alignBottom="@+id/btnCoffeeCourt"
                android:layout_alignRight="@+id/Hello2"
                android:layout_alignEnd="@+id/Hello2" />

            <TextView
                android:id="@+id/Hello2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un petit thé ?"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/btnCoffeeLong"
                android:layout_alignRight="@+id/btnThe"
                android:layout_alignEnd="@+id/btnThe" />

            <Button
                android:id="@+id/btnThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oh oui !"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/Hello2"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>